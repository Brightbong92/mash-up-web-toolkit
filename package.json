{
  "name": "mash-up-web-toolkit",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean:cli": "cd packages/cli/command && pnpm clean && cd ../generate-api && pnpm clean",
    "build:cli": "cd packages/cli/command && pnpm build && cd ../generate-api && pnpm build",
    "dev:cli": "pnpm build:cli && node packages/cli/command/dist/index.mjs"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
