{
  "extends": "@mash-up-web-toolkit/typescript-config/base.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/controller/*": ["src/controller/*"],
      "@/config/*": ["src/config/*"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
